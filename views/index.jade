extends layout

block content
	div(id='nav-container')
		div(id='nav')
			p(class='small-logo', data-scroll='header') KL
			ul
				li(data-scroll='experience') Experience
				li(data-scroll='skills') Skills
				li(data-scroll='portfolio') Portfolio
				li(data-scroll='contact') Contact

	div(id='header')
		div(class='overlay light')

		div(class='text')
			div(class='title')
				h1(class='logo')
					span(class='fname') Kane&nbsp;
					span(class='lname') Loughnan
				h3(class='job') Web Developer

			div(class='info')
				p Web Developer based in Sydney. I am enthusiastic, have a positive, scientific and innovative approach to challenges and have a strong attention to detail.
				a(href='assets/resume.pdf', target='_blank', style='margin-right:4px;') Resume
				a(href='https://www.linkedin.com/in/kane-loughnan-1a897b166/f', target='_blank', rel='noreferrer noopener external nofollow') LinkedIn
	
	div(id='experience', class='section')
		div(class='overlay')

		h2(class='section-heading') Experience & Education

		section(id='cd-timeline', class='cd-container')
			each experience in experiences
				div(class='cd-timeline-block')
					div(class='cd-timeline-img')
					div(class='cd-timeline-content')
						img(data-src='/images/experience/' + experience.image, class='logo lazyload', alt=experience.imageAlt)
						h3 #{experience.heading}
						div(class='timeline-content-info') #{experience.title}
						p #{experience.text}
						ul(class='content-skills')
							each skill in experience.skills
								li #{skill}
						span(class='cd-date') #{experience.date}

	div(id='skills', class='section light')
		h2(class='section-heading') Skills
		div(class='icons')
			each skill in skills
				div(class='icon')
					img(data-src='/images/skills/' + skill.src, alt=skill.alt, class='lazyload')

	div(id='portfolio', class='section light')
		h2(class='section-heading') Portfolio/Gallery

		div(class='tiles')
			each tile in tiles
				div(class='tile', data-id=tile.id, onclick='gallery(this);')
					div(class='inner lazyload', style='background-image:url(/images/portfolio/' + tile.id + '/tile.jpg)')
					span #{tile.title}

	div(id='contact', class='section')
		div(class='form-box')
			div(class='info')
				h2 Contact
				p(class='form-message') Please fill in your details and I will get back to you as soon as possible.
			form(name='contact')
				div(class='input-container')
					label(for='form-name') Name
					input(type='text', name='name', id='form-name')
				div(class='input-container')
					label(for='form-name') Email
					input(type='email', name='email', id='form-email')
				div(class='input-container')
					label(for='form-name') Subject
					input(type='text', name='subject', id='form-subject')
				div(class='input-container')
					label(for='form-name') Message
					textarea(name='message', id='form-message')
				div(class='input-container')
					input(type='submit', value='Submit')
	
	div(id='footer')
		p &copy; Kane Loughnan 2019

	div(id='magnific', class='disable-scrollbars')
		div(class='close', onclick='closeGallery();')
			img(data-src='/images/close.png', class='lazyload')
		
		div(class='gallery')
